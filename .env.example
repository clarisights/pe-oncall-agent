ZULIP_SITE=https://zulip.example.com
ZULIP_EMAIL=bot@example.com
ZULIP_API_KEY=replace-me

# Optional defaults for replies
TRIAGE_DEFAULT_STREAM=pe-oncall
TRIAGE_DEFAULT_TOPIC=bot-status
TRIAGE_BOT_ALIASES=probably

# Codex CLI authentication (required for RCA responses)
CODEX_API_KEY=replace-me
CODEX_CLI_PATH=codex
NODE_CLI_PATH=node
LLM_MODEL=

# Sourcegraph (optional; leave blank to disable)
SOURCEGRAPH_URL=http://sourcegraph:7080
SOURCEGRAPH_TOKEN=

# Repository layout inside the container
TRIAGE_REPO_BASE=/app/repos

# Worker pool + thread cache tuning
TRIAGE_WORKERS=2
THREAD_CACHE_TTL=120
